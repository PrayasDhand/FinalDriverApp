<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RegisterLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:ems">10</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">#707070</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegisterButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Basic.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... other night mode theme attributes -->

        <!-- Text color for TextViews -->
        <item name="android:textColor">@android:color/white</item>

        <!-- Text color for EditTexts -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- Text color for hints in EditTexts -->
        <item name="android:textColorHint">@android:color/black</item>
    </style>


</resources>
